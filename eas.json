{
  "cli": { "version": ">= 16.32.0", "appVersionSource": "remote" },
  "build": {
    "base": {
      "node": "22.21.1",
      "pnpm": "9.15.0"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal"
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "android": { "buildType": "app-bundle" },
      "env": { "APP_ENV": "production" }
    },
    "preview-apk": {
      "extends": "base",
      "android": { "buildType": "apk" },
      "env": { "APP_ENV": "production" }
    }
  },
  "submit": { "production": {} }
}
